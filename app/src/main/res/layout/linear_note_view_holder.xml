<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    
    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/card_viewholder_bg"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <!-- Logo Icon-->
            <ImageView
                android:id="@+id/id_default_image"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_default_image1" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/id_default_image"/>

            <!-- Current Date -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="Current Date"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/id_default_image"/>

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_delete"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp" />

            <!-- Update Button -->
            <ImageView
                android:id="@+id/btn_favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_toolbar_edit"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/btn_delete"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>