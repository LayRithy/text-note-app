<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/title_update"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Update Detail"
        android:textSize="30dp"
        android:background="@color/toolbal_bg"
        android:gravity="center"
        />

    <!-- Edit Title -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_update"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Input Title -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/edittext_hint_title"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Edit Content -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_title"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Input Content -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/edittext_hint_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Current Date -->
    <TextView
        android:id="@+id/update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/07/2020"
        android:layout_below="@+id/update_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="15dp"
        />


    <!-- Button Update -->
    <Button
        android:id="@+id/update_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/update_content"
        android:layout_marginTop="10dp"
        android:hint="Update"
        android:textSize="20dp"
        android:textColor="#000000"
        android:backgroundTint="@color/toolbal_bg"
        />




</RelativeLayout>